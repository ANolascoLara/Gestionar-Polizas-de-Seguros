@model ML.Login

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Iniciar sesión</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    @using (Html.BeginForm("Form", "Login", FormMethod.Post))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Email, "Usuario", htmlAttributes: new { @class = "form-label" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Ingresa tu usuario", required = "required" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(model => model.Password, "Contraseña", htmlAttributes: new { @class = "form-label" })
                            <div class="input-group" id="show_hide_password">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña", required = "required", id = "PasswordInput" })
                                <span class="input-group-text" id="togglePassword">
                                    <a href="#" tabindex="-1" style="color: inherit;">
                                        <i class="bi bi-eye-slash" id="togglePasswordIcon"></i>
                                    </a>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function () {
            $('#togglePassword').on('click', function (e) {
                e.preventDefault();
                var passwordInput = $('#PasswordInput');
                var icon = $('#togglePasswordIcon');
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');  // ojo abierto cuando texto visible
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');  // ojo cerrado cuando texto oculto
                }
            });
        });

    </script>
}
